<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@(ViewBag.Title == null ? "Hemligt nummer" : ViewBag.Title)</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/mystyle.css" rel="stylesheet" />
</head>
<body>
    <div class="row">
        <div class="col-lg-offset-1 col-lg-10">
            <h1>Gissa det hemliga talet!</h1>
            <div class="well"></div>
            @RenderBody()
            <hr />
            <p>&copy @DateTime.Today.Year - Gissa det hemliga talet!</p>
        </div>
    </div>

    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


    <script>

        function EnableEagerValidation() {
            var itemsNeedingValidation = $('*[data-val="true"]');
            itemsNeedingValidation.each(function () {
                $(this).blur(function () { $(this).closest("form").valid(); });
            });
        }
    </script>

</body>
</html>

